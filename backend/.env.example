# Backend environment template for AITutor
# Copy to backend/.env and replace placeholder values.

# App and auth
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5430/aitutordb
SECRET_KEY=replace_with_strong_secret
ADMIN_REGISTRATION_KEY=replace_with_strong_admin_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Plan and limits
PREMIUM_TRIAL_DAYS=7
FREE_DAILY_COURSE_LIMIT=1
FREE_DAILY_LESSON_LIMIT=2

# AWS Bedrock
AWS_ACCESS_KEY_ID=replace_me
AWS_SECRET_ACCESS_KEY=replace_me
AWS_REGION=us-east-1

# Bedrock model id or inference profile id
BEDROCK_MODEL_ID=global.anthropic.claude-sonnet-4-6
# Example ARN form:
# BEDROCK_MODEL_ID=arn:aws:bedrock:ap-south-1:123456789012:inference-profile/global.anthropic.claude-sonnet-4-6
